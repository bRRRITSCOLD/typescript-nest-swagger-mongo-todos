{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "controllers/todos": [
        "libs/controllers/todos/src"
      ],
      "controllers/todos/*": [
        "libs/controllers/todos/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}